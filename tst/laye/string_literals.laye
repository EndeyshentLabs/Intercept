// R %lcc --ir %s
// d b [a-zA-Z0-9\.]+
// d t %[0-9]+

// * (?<global>[^:\s]+) : i8\[15\] = "Hello, hunter!\\00"

// * puts : imported i32(ptr %0)
foreign callconv(cdecl) i32 puts(i8[*] s);

// * main : layecc i64():
// +   $b:
// +     (?<str>$t) = alloca ptr
// +     store ptr @$global into $str
// +     (?<l>$t) = load ptr from $str
// +     $t = call @puts (ptr $l) -> i32
// +     return i64 0
int main()
{
    i8[*] str = "Hello, hunter!";
    puts(str);
    return 0;
}
